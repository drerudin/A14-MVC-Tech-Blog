<article>
    <a href="/dashboard">Back to Dashboard</a>
   <article class="new-post">
    <section class="edit-post">
        <div class="header">
            <h2>Edit Post</h2>
        </div>
        <div class="post-section">
            <form class="edit-post__form">
                <div class="post-title">
                    <label for="title">Title</label>
                    <input type="text" id="title" name="title" value="{{post.title}}" />
                </div>
                <div class="post-content">
                    <label for="content">Content</label>
                    <textarea id="content" name="content" rows="5">{{post.content}}</textarea>
        </div>
        <button type="submit" class="btn btn-primary">Update Post</button>
        <button type="button" class="btn btn-danger" id="delete-post">Delete Post</button>
        </form>
        </div>
    </section>
   </article>

{{#if loggedIn}}
<script src="/javascript/edit-post.js"></script>
<script src="/javascript/comment.js"></script>
<script src="/javascript/delete-post.js"></script>
{{/if}}