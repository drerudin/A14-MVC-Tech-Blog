<section class="new-post">
    <button type="submit" class="btn btn-primary">Create Post</button>
</section>

{{#if post.length }}
<section>
    <h2>Your Posts</h2>
    <ul class="posts">
        {{ #each post as |post| }}
        <li>
            {{> post-info post }}
            <a href="/dashboard/edit/{{post._id}}">Edit</a>
        </li>
        {{ /each }}
    </ul>
</section>
{{/if}}

<script src="/javascript/create-post.js"></script>